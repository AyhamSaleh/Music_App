<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/playerTransition"
        motion:constraintSetEnd="@+id/playerEnd"
        motion:constraintSetStart="@id/playerStart"
        motion:duration="500">
        <KeyFrameSet>

        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:maxAcceleration="40"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/playerStart">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/playerEnd">
        <Constraint
            android:id="@+id/musicProgress"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:alpha="0"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/musicArtistNameTv" />
        <Constraint
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/musicButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            motion:layout_constraintBottom_toBottomOf="@+id/next_button"
            motion:layout_constraintEnd_toStartOf="@+id/next_button"
            motion:layout_constraintTop_toTopOf="@id/next_button" />
        <Constraint
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            motion:layout_constraintBottom_toBottomOf="@+id/musicButton"
            motion:layout_constraintEnd_toStartOf="@+id/musicButton"
            motion:layout_constraintTop_toTopOf="@+id/musicButton" />
        <Constraint
            android:id="@+id/musicImageCv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/musicInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintBottom_toBottomOf="@+id/musicImageCv"
            motion:layout_constraintEnd_toStartOf="@+id/previous_button"
            motion:layout_constraintStart_toEndOf="@+id/musicImageCv"
            motion:layout_constraintTop_toTopOf="@+id/musicImageCv" />

    </ConstraintSet>
</MotionScene>